    "def conditional_probability(rA, wA, rB, wB):\n",
    "    pA = 0.5\n",
    "    pB = 0.5\n",
    "    pwa = wA/(rA + wA)\n",
    "    pwb = wB/(rB + wB)\n",
    "    pw = pwa *pA + pwb*pB\n",
    "    paw = pA*pwa/pw\n",
    "    return paw\n",
    "print (conditional_probability(1.0, 2.0, 2.0, 1.0))\n",
    "    "
   ]
